<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"
        android:drawable="@drawable/bg_edittext"/>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorEditText" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/colorEditText" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorEditText" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>

            <item android:gravity="right" android:end="10dp" tools:targetApi="m">
                <bitmap android:antialias="true"  android:gravity="right" android:src="@drawable/spinner_arrow" />
            </item>
        </layer-list>
    </item>
</selector>
